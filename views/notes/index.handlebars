{{#each notes}}
    <div class="card card-body mb-2">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        <a href="/notes/edit/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
        <form action="/notes/edit/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger btn-block" value="DELETE">
        </form>
    </div>
{{else}}
    <p>No notes listed</p>
{{/each}}